<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/edit_backgroud"
    tools:context="com.example.sahni.todolist.AddItem">
<EditText
    android:hint="To Do"
    android:id="@+id/item"
    android:inputType="textCapWords"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<EditText
    android:hint="Description"
    android:id="@+id/idescription"
    android:inputType="text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Dead Line: "-->
        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>-->
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:id="@+id/day"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:id="@+id/month"
        android:layout_height="match_parent"/>
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:textAlignment="center"
        android:id="@+id/year"
        android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/priority">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Priority:"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <Button
            android:id="@+id/none"
            android:layout_width="0dp"
            android:onClick="setPriority"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selected_button"
            android:text="None"/>
        <Button
            android:id="@+id/low"
            android:onClick="setPriority"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selected_button"
            android:text="Low"/>
        <Button
            android:id="@+id/medium"
            android:onClick="setPriority"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selected_button"
            android:text="Medium"/>

        <Button
            android:id="@+id/high"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selected_button"
            android:onClick="setPriority"
            android:text="High" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Tags"
            android:id="@+id/AddTag"
            android:inputType="text"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/addtags"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ADD"
            android:background="@drawable/button"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/selectedTags"/>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Comments"
            android:id="@+id/AddComments"
            android:inputType="textCapWords"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/addcomment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ADD"
            android:background="@drawable/button"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addedComments"></ListView>
</LinearLayout>

