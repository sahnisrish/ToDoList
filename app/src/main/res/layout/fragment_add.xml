<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/BackgroundLight">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is to be done?"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:paddingLeft="10dp"
            android:hint="To Do"
            android:id="@+id/item"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Description"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:hint="Description"
            android:id="@+id/idescription"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Deadline"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:id="@+id/day"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:id="@+id/month"
                android:layout_height="match_parent"/>
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:id="@+id/year"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Priority"
            android:textColor="@color/colorPrimary" />
        <LinearLayout
            android:background="@drawable/selected_button"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/priority">
            <Button
                android:id="@+id/none"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selected_button"
                android:text="None"/>
            <Button
                android:id="@+id/low"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selected_button"
                android:text="Low"/>
            <Button
                android:id="@+id/medium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selected_button"
                android:text="Medium"/>

            <Button
                android:id="@+id/high"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selected_button"
                android:text="High" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Add Tags"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingLeft="10dp"
                android:hint="Tag"
                android:background="@android:color/transparent"
                android:id="@+id/AddTag"
                android:inputType="text"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/addtags"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ADD"
                android:background="@drawable/button"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/selectedTags"/>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Add Comments"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Comments"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:id="@+id/AddComments"
                android:inputType="textCapWords"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/addcomment"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ADD"
                android:background="@drawable/button"/>
        </LinearLayout>
        <ListView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addedComments"></ListView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

